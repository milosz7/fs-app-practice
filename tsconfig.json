{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": "./server",
    "outDir": "./build",
  },
  "ts-node": {
    "files": true
  },
  "exclude": ["client", "node_modules"]
}
